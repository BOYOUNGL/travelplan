<% include inc/header %>
<!DOCTYPE HTML>
<html>

  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Goldilocks Web service</title>
    <script src="/js/jquery-latest.min.js" type="text/javascript"></script>
    <script>
      function submitJoin(option) {
          var id = $('#id').val();
          var passwd = $('#passwd').val();
          var passwd2 = $('#passwd2').val();
          var email = $('#email').val();
          if(option == 'add') {
              // 새 글 등록 시
              if(id == '' || passwd == '' || email == '') {
                  alert("모두 입력하세요");
                  return;
              } else if(passwd!=passwd2){
                  alert("패스워드가 다릅니다.");
                  return;
              }else if(passwd==passwd2){
                  $('#join_form').submit();
              }
          }
      }
    </script>

    <style>
      a { text-decoration:none }
      a:hover { text-decoration:none !important }
    </style>
  </head>

<body onLoad="document.passport_form.id.focus();" id="join_bg">
      <div class="join_box">
        <div class="box_title">
          <div class="title_txt">Join</div>
          <form method="POST" action="/join" name="join_form" id="join_form">
          <div>
              <table>
                <tr><td width="36%"><span class="join_txt">아이디</span> </td><td><input type="text" class="input_type2" name="id" id="id"/></td></tr>
                <tr><td width="36%"><span class="join_txt">비밀번호</span> </td><td><input type="password" class="input_type2" name="passwd" id="passwd" /></td></tr>
                <tr><td width="36%"><span class="join_txt">비밀번호 확인</span> </td><td><input type="password" class="input_type2" name="passwd2" id="passwd2" /></td></tr>
                <tr><td width="36%"><span class="join_txt">이메일</span> </td><td><input type="text" class="input_type2" name="email" id="email" onkeypress="if(event.keyCode==13) {document.forms['join_form'].submit();}"/></td></tr>
              </table>
            </div>
          </form>
          <div class="app_btn_area">
            <div name="btn_join" id="btn_join"  class="btn_02" onMouseOver="this.className='btn_002';" onMouseOut="this.className='btn_02';" onclick="submitJoin('add')">Join</div>
          </div>
        </div>
  </body>
</html>
