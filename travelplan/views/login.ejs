<!DOCTYPE HTML>
<html>

  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Goldilocks Web service</title>
    <script src="/js/jquery-latest.min.js" type="text/javascript"></script>

    <style>
      a { text-decoration:none }
      a:hover { text-decoration:none !important }
    </style>

  </head>

  <body style="margin: 0 0 0 0;" onLoad="document.passport_form.id.focus();">
    <div id="login_bg">
      <div class="login_logo"><img src="/img/img_intro.png" width="286" height="70"></div>
      <div class="login_box">
        <div class="box_title">
          <div class="title_txt">Login to your account</div>
          <form method="POST" action="/login" name="passport_form" id="passport_form">
            <div><input type="text" class="input_type" name="id" id="id"/></div>
            <div><input type="password" class="input_type" name="passwd" id="passwd" onkeypress="if(event.keyCode==13) {document.forms['passport_form'].submit();}"/></div>
          </form>
          <div id="div_login"><input type="submit" name="btn_login" id="btn_login" value="Login"></div>
          <div id="div_join"><input type="button" name="btn_join" id="btn_join" value="Join" onclick="location.href='/join'"></div>
        </div>
      </div>
    </div>
  </body>
</html>
